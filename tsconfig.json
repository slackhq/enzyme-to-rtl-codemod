{
    "compilerOptions": {
      "jsx": "react",
      "target": "ES6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "src/support/ast-transformations/utils/test-data/**/*", // TODO: fix these tests to be real Enzyme tests
      "src/support/prompt-generation/utils/test-data/**/*",
      "src/support/enzyme-helper/test-data/**/*"
    ]
  }