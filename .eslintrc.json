{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "@typescript-eslint/indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["warn", "single"],
        "no-unused-vars": "warn",
        "@typescript-eslint/no-unused-vars": "warn"
    }
}
